algoritmo "trigonmetria"
//
var
   x : real
inicio
   escreval("Digite um angulo qualquer em graus (entre 0 e 360) para")
   escreva("calcularmos as funções trigonométricas referentes:  ")
   leia(x)
   escreval("Seno -------> ", sen(grauprad(x)):2:3)
   escreval("Cosseno ----> ", cos(grauprad(x)):2:3)
   escreval("Tangente ---> ", tan(grauprad(x)):2:3)
fimalgoritmo